<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:background="@color/material_dynamic_neutral20"
    android:padding="4dp">

    <View
        android:id="@+id/viewColor"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Title"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOrganizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Organizer"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvEventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Event Location"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvOrganizer" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="Description"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvEventLocation" />

    <TextView
        android:id="@+id/tvDtStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Dt Start"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvDescription" />

    <TextView
        android:id="@+id/tvDtEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Dt End"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvDtStart" />

    <TextView
        android:id="@+id/tvEventTimezone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Event Timezone"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvDtEnd" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Duration"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvEventTimezone" />

    <TextView
        android:id="@+id/tvAllDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="All Day"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvDuration" />

    <TextView
        android:id="@+id/tvAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Availability"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvAllDay" />

    <TextView
        android:id="@+id/tvRrule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Availability"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvAvailability" />


</androidx.constraintlayout.widget.ConstraintLayout>