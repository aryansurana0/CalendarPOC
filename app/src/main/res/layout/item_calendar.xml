<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:background="@color/material_dynamic_neutral20"
    android:padding="4dp">

    <View
        android:id="@+id/viewColor"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Display Name"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvVisibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Visible"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvDisplayName" />

    <TextView
        android:id="@+id/tvSyncEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Sync Events"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvVisibility" />

    <TextView
        android:id="@+id/tvAccountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Account Name"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvSyncEvents" />

    <TextView
        android:id="@+id/tvAccountType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Account Type"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvAccountName" />

    <TextView
        android:id="@+id/tvOwnerAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Owner Account"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvAccountType" />

    <TextView
        android:id="@+id/tvCalendarLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="CalendarLocation"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvOwnerAccount" />

    <TextView
        android:id="@+id/tvCalendarAccessLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Calendar Access Level"
        app:layout_constraintStart_toEndOf="@id/viewColor"
        app:layout_constraintTop_toBottomOf="@id/tvCalendarLocation" />


</androidx.constraintlayout.widget.ConstraintLayout>